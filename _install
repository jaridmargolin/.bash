#!/bin/bash

# ##############################################################################
#
# _install
#
# Install by symlinking required files into user directory.
#
# ##############################################################################


# ------------------------------------------------------------------------------
# REQUIRED HELPERS
# ------------------------------------------------------------------------------

. ".bash_helpers"

# ------------------------------------------------------------------------------
# CREATE LINKS
# ------------------------------------------------------------------------------

SRC_DIR=$(getDir ${BASH_SOURCE[0]})
ln -s $SRC_DIR/all.sh ~/.bash_base.sh
ln $SRC_DIR/.bash_helpers ~/.bash_helpers
ln $SRC_DIR/.bash_profile ~/.bash_profile
ln $SRC_DIR/.inputrc ~/.inputrc

# ------------------------------------------------------------------------------
# EXECUTE IN CURRENT SHELL
# ------------------------------------------------------------------------------

. ~/.bash_profile
